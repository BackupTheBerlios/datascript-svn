<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.berlios.datascript.rds</groupId>
  <artifactId>html</artifactId>
  <packaging>bundle</packaging>
  <version>0.30</version>
  <name>Relational DataScript HTML Generator</name>
  <parent>
    <groupId>de.berlios.datascript</groupId>
    <artifactId>rds</artifactId>
    <version>0.30</version>
  </parent>
  <dependencies>
    <dependency>
      <groupId>de.berlios.datascript.rds</groupId>
      <artifactId>core</artifactId>
      <version>${rds.version}</version>
    </dependency>
    <dependency>
      <groupId>org.freemarker</groupId>
      <artifactId>com.springsource.freemarker</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Export-Package>datascript.emit.html</Export-Package>
          </instructions>
        </configuration>
      </plugin>
      <plugin>
        <groupId>de.berlios.datascript</groupId>
        <artifactId>maven-sourcebundle-plugin</artifactId>
        <configuration>
          <bundleName>de.berlios.datascript.html</bundleName>
          <sourceBundleName>de.berlios.datascript.html.source</sourceBundleName>
        </configuration>
      </plugin>      
    </plugins>
  </build>
</project>